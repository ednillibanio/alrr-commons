	<persistence-unit name="alrr-commons-persistence-ear">
		<!-- DATA SOURCE -->
		<jta-data-source>java:jboss/datasources/commons-ds</jta-data-source>

		<class>br.leg.rr.al.commons.jpa.Bairro</class>
		<class>br.leg.rr.al.commons.jpa.Cep</class>
		<class>br.leg.rr.al.commons.jpa.Endereco</class>
		<class>br.leg.rr.al.commons.jpa.Feriado</class>
		<class>br.leg.rr.al.commons.jpa.Localidade</class>
		<class>br.leg.rr.al.commons.jpa.Pais</class>
		<class>br.leg.rr.al.commons.jpa.Profissao</class>
		<class>br.leg.rr.al.commons.jpa.Telefone</class>
		<!-- classes que monta a base de endereços do IBGE -->
		<class>br.leg.rr.al.core.jpa.BaseEntity</class>
		<class>br.leg.rr.al.core.jpa.IbgeMesoregiao</class>
		<class>br.leg.rr.al.core.jpa.IbgeMicroregiao</class>
		<class>br.leg.rr.al.core.jpa.IbgeMunicipio</class>
		<class>br.leg.rr.al.core.jpa.IbgeRegiao</class>
		<class>br.leg.rr.al.core.jpa.IbgeUF</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<validation-mode>AUTO</validation-mode>
		<!-- <jar-file>lib/alrr-core-utils-1.0.0.jar</jar-file> -->
		<!-- <jar-file>lib/alrr-commons-jpa-1.0.0.jar</jar-file> -->



		<properties>
			<property name="wildfly.jpa.default-unit" value="true" />
			<property name="hibernate.default_schema"
				value="commons_schema" />
			<!-- <property name="javax.persistence.schema-generation.database.action" 
				value="drop-and-create" /> -->
			<!-- <property name="javax.persistence.sql-load-script-source" value="META-INF/sql/data.sql" 
				/> -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.connection.useUnicode"
				value="true" />
			<property name="hibernate.connection.characterEncoding"
				value="UTF-8" />
			<property name="log4j.logger.org.hibernate.SQL"
				value="debug" />
			<property name="log4j.logger.org.hibernate.type"
				value="info" />
			<property name="log4j.logger.org.hibernate.transaction"
				value="debug" />

			<property name="hibernate.search.default.directory_provider"
				value="filesystem" />
			<property name="hibernate.search.default.indexBase"
				value="./lucene/indexes" />
			<!-- <property name="hibernate.search.analyzer" value="br.leg.rr.al.core.jpa.EntityAnalyzer" 
				/> -->
			<!-- CONFIGURAÇÃO DE AUDITORIA. SERÁ USADO PARA A ENTIDADE ATENDIMENTO -->

		</properties>
	</persistence-unit>
